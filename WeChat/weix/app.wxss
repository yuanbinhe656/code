/**app.wxss**/
.container{
  display: flex;
  flex-direction: column;
  min-height: 100%;
  text-align: center;
  justify-content: space-between;
  font-size: 34rpx;
  padding: 15rpx;
}
.container1 {
  padding: 30rpx;
  border-top: 1rpx solid #e5e5e5;
}
.containermap {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.loading {
    position: fixed;
    left: 50%;
    top: 50%;
    width: 200rpx;
    height: 200rpx;
    margin: -100rpx 0 0 -100rpx;
    line-height: 300rpx;
    border-radius: 16rpx;
    background-image: url("");
    background-position: center 40rpx;
    background-repeat: no-repeat;
    background-size: 80rpx;
    background-color: rgba(0, 0, 0, 0.85);
    color: #fff;
    text-align: center;
    font-size: 24rpx;
    animation: bounceIn .3s;
}